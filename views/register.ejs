<% include ./layouts/header %>

<div class="row">
  <div class="col-xs-6 col-sm-6 col-lg-4 yelpcamp-userform">
    <form action="/register" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="user[username]" placeholder="username">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="password">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="user[firstName]" placeholder="first name">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="user[lastName]" placeholder="last name">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="user[avatar]" placeholder="avatar url">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="user[adminCode]" placeholder="Admin Code">
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-success btn-block" value="Sign Up">
      </div>
    </form>
    <a href="/">Go Back</a>
  </div>
</div>

<% include ./layouts/footer %>
