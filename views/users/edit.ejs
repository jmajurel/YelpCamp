<% include ../layouts/header %>

<div class="row">
  <div class="col-xs-6 col-sm-6 col-lg-4 yelpcamp-userform">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="updatedUser[firstName]" value="<%= user.firstName %>">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="updatedUser[lastName]" value="<%= user.lastName %>">
      </div>
      <div class="form-group">
        <input type="email" class="form-control" name="updatedUser[email]" value="<%= user.email %>">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="updatedUser[avatar]" value="<%= user.avatar %>">
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-success btn-block" value="Update Profile">
      </div>
    </form>
    <a href="/users/<%= user._id %>">Go Back</a>
  </div>
</div>

<% include ../layouts/footer %>
