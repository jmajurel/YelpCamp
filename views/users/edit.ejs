<% include ../layouts/header %>

<div class="row">
  <div class="col-xs-6 col-sm-6 col-lg-4 yelpcamp-userform">
    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="users-edit-firstName">First Name</label>
        <input id="users-edit-firstName" type="text" class="form-control" name="firstName" value="<%= user.firstName %>">
      </div>
      <div class="form-group">
        <label for="users-edit-lastName">Last Name</label>
        <input id="users-edit-lastName" type="text" class="form-control" name="lastName" value="<%= user.lastName %>">
      </div>
      <div class="form-group">
        <label for="users-edit-email">Email</label>
        <input id="users-edit-email" type="email" class="form-control" name="email" value="<%= user.email %>">
      </div>
      <div class="form-group">
        <label for="users-edit-avatar">Email</label>
        <input id="users-edit-avatar" type="url" class="form-control" name="avatar" value="<%= user.avatar %>">
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-success btn-block" value="Update Profile">
      </div>
    </form>
    <a href="/users/<%= user._id %>">Go Back</a>
  </div>
</div>

<% include ../layouts/footer %>
