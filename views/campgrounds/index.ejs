<% include ../layouts/header %>

<div id="campgroundViewer">
  <div class="row">
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-lg-4 col-md-6 col-12">
        <div class="card">
          <img class="card-img-top" alt="campground-img" src="<%= campground.image %>">
          <div class="card-body">
	    <h5 class="card-title">
	      <%= campground.name %>
	      <a class="btn btn-primary float-right" href="/campgrounds/<%= campground._id %>">View More</a>
	    </h5>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<div id="campgrounds-idx-cr">
  <a class="btn btn-success" href="/campgrounds/new">Add New Campground</a>
</div>


<% include ../layouts/footer %>
