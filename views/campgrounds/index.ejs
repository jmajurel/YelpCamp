<% include ../layouts/header %>

<h1>Campgrounds</h1>
<div id="campgroundViewer" class="container">
  <div class="row">
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-lg-4 col-md-6 col-12">
	<img class="rounded img-thumbnail" alt="campground" src="<%= campground.image %>">
        <p class="caption">
          <%= campground.name %>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View More</a>
        </p>
      </div>
    <% }); %>
  </div>
  <a class="btn btn-secondary" href="/campgrounds/new">Add New Campground</a>
</div>


<% include ../layouts/footer %>
