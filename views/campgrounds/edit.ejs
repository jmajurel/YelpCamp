<% include ../layouts/header %>

<div class="container yelpcamp-form">
  <h1>Update Campground</h1>
  <form action='/campgrounds/<%= campground._id %>?_method=PUT' method="POST">
    <div class="form-group">
      <label for="campgroundName">Name</label>
      <input id="campgroundName" type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
    </div>
    <div class="form-group">
      <label for="campgroundSource">Image</label>
      <input id="campgroundSource" type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
    </div>
    <div class="form-group">
      <label for="campgroundDesc">Description</label>
      <input id="campgroundDesc" type="text" class="form-control" name="campground[desc]" value="<%= campground.desc %>">
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary btn-block" value="Update">
    </div>
  </form>
  <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>


<% include ../layouts/footer %>
