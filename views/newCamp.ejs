<% include layouts/header %>

<div id="newCampground" class="container">
  <h1>New Campground</h1>
  <form action="/campgrounds" method="POST">
    <div class="form-group">
      <label for="campgroundName">Name</label>
      <input id="campgroundName" type="text" class="form-control" name="name" placeholder="text">
    </div>
    <div class="form-group">
      <label for="campgroundSource">Image</label>
      <input id="campgroundSource" type="text" class="form-control" name="image" placeholder="url">
    </div>
    <div class="form-group">
      <label for="campgroundDesc">Description</label>
      <input id="campgroundDesc" type="text" class="form-control" name="description" placeholder="text">
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary btn-block" value="Add New Campground">
    </div>
  </form>
  <a href="/campgrounds">Go Back</a>
</div>


<% include layouts/footer %>
