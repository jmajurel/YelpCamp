<% include ../layouts/header %>

<div class="row">
  <div class="yelpcamp-form">
    <h1>Edit Comment</h1>
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="comContentEditForm">Content</label>
        <textarea id="comContentEditForm" class="form-control" name="comment[content]" rows="4"><%= comment.content %></textarea>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary btn-block" value="Update">
      </div>
    </form>
    <a href="/campgrounds/<%= campground_id %>">Go Back</a>
  </div>
</div>

<% include ../layouts/footer %>
