<% include ../layouts/header %>

<div class="container yelpcamp-form">
  <h1>Edit Comment</h1>
  <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="contentSrc">Content</label>
      <input id="contentSrc" type="text" class="form-control" name="comment[content]" value="<%= comment.content %>">
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary btn-block" value="Update">
    </div>
  </form>
  <a href="/campgrounds/<%= campground_id %>">Go Back</a>
</div>

<% include ../layouts/footer %>
