<% include ../layouts/header %>

<div class="container yelpcamp-form">
  <h1>New Comment to <%= campground.name %></h1>
  <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
    <div class="form-group">
      <label for="comContentNewForm">Content</label>
      <textarea id="comContentNewForm" class="form-control" name="comment[content]" placeholder="text" rows="4"></textarea>
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-success btn-block" value="Submit new comment">
    </div>
  </form>
  <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<% include ../layouts/footer %>
