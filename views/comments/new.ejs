<% include ../layouts/header %>

<div class="container yelpcamp-form">
  <h1>New Comment</h1>
  <form action="/campgrounds/<%= req.params.id %>/comments" method="POST">
    <div class="form-group">
      <label for="authorSrc">Author</label>
      <input id="authorSrc" type="text" class="form-control" name="author" placeholder="text">
    </div>
    <div class="form-group">
      <label for="contentSrc">Content</label>
      <input id="contentSrc" type="text" class="form-control" name="content" placeholder="text">
    </div>
    <div class="form-group">
      <input type="submit" class="btn btn-primary btn-block" value="Submit new comment">
    </div>
  </form>
  <a href="/campgrounds/<%= req.params.id %>">Go Back</a>
</div>

<% include ../layouts/footer %>
